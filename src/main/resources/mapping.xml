<?xml version="1.0"?><!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN"
        "http://castor.org/mapping.dtd">
<mapping>
    <class name="com.accenture.flowershop.fe.dto.User">

        <map-to xml="user" />

        <field name="username" type="string">
            <bind-xml name="username" node="attribute" />
        </field>

        <field name="email" type="string">
            <bind-xml name="email" node="attribute" />
        </field>

        <field name="login" type="string">
            <bind-xml name="login" node="element" />
        </field>

        <field name="password" type="string">
            <bind-xml name="password" node="element" />
        </field>
        <field name="discount" type="integer">
            <bind-xml name="discount" node="element" />
        </field>

        <field name="balance"/>
    </class>
</mapping>